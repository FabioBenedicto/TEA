{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error", {
            "semi": false,
            "singleQuote": true,
            "trailingCommas": "none",
            "tabWidth": 2,
            "arrowParens": "avoid",
            "jsxSingleQuote": true,
            "endOfLine": "auto"
        }],
        "@typescript-eslint/strict-boolean-expressions": "off",
        "@typescript-eslint/explicit-function-return-type": "off"
    }
}
