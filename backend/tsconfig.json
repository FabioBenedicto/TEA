{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "lib": [ "es6" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths" : {
      "@connections/*": ["./src/connections/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@models/*": ["./src/models/*"]
    },
  }
}